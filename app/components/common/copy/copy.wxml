<!-- 标题 -->
<view wx:if="{{config.header}}" class="copy-header">{{config.header}}</view>
<view class="copy-wrapper">
  <!-- 待复制文字 -->
  <view class="text">{{config.text}}</view>
  <!-- 复制按钮 -->
  <view
    class="copy"
    hover-class="button-hover"
    hover-stay-time="100"
    catch:tap="copy"
  >
    <image class="icon" src="./icon/copy.svg" />
  </view>
</view>
