<wxs src="./text.wxs" module="text" />

<template name="text">
  <block wx:if="{{config.tag === 'ol'}}">
    <view
      wx:for="{{config.text}}"
      wx:key="*this"
      class="list"
      style="{{config.style || ''}}"
    >
      <view class="head">{{index + 1}}.</view>
      <text class="text" decode user-select space="nbsp">{{item}}</text>
    </view>
  </block>

  <block wx:elif="{{config.tag === 'ul'}}">
    <view
      wx:for="{{config.text}}"
      wx:key="*this"
      class="list"
      style="{{config.style || ''}}"
    >
      <view class="head">·</view>
      <text class="text" decode user-select space="nbsp">{{item}}</text>
    </view>
  </block>

  <block wx:else>
    <view wx:for="{{config.text}}" wx:key="*this">
      <text
        class="text"
        style="{{config.style || ''}}"
        decode
        user-select
        space="nbsp"
        >{{item}}</text
      >
    </view>
  </block>
</template>

<view
  wx:if="{{text.isContainer(config.type)}}"
  class="container {{config.type}}"
>
  <text wx:if="{{config.heading !== false}}" class="container-title" user-select
    >{{ text.getTitle(config)}}</text
  >
  <template is="text" data="{{config}}" />
</view>
<!-- 段落标题 -->
<block wx:else>
  <text wx:if="{{config.heading}}" class="paragraph-header" user-select
    >{{config.heading}}</text
  >
  <!-- 段落主体 -->
  <view class="paragraph" style="{{config.align}}">
    <template is="text" data="{{config}}" />
  </view>
</block>
